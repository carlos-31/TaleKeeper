    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_library">

    <fragment
        android:id="@+id/navigation_library"
        android:name="com.carlosreads.talekeeper.ui.home.LibraryFragment"
        android:label="@string/library"
        tools:layout="@layout/fragment_library" />

    <fragment
        android:id="@+id/navigation_discover"
        android:name="com.carlosreads.talekeeper.ui.dashboard.DiscoverFragment"
        android:label="@string/discover"
        tools:layout="@layout/fragment_discover" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.carlosreads.talekeeper.ui.notifications.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile" />
